{
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "build:ssr": "vite build && vite build --ssr",
        "clean": "rimraf dist node_modules/.vite",
        "clean:all": "rimraf dist node_modules .pnpm-store",
        "dev": "vite",
        "format": "prettier --write resources/",
        "format:check": "prettier --check resources/",
        "install:post": "simple-git-hooks",
        "lint": "eslint . --fix",
        "optimize": "vite optimize --force",
        "preview": "vite preview",
        "preview:dist": "vite preview --port 5000",
        "test": "vitest",
        "test:coverage": "vitest run --coverage",
        "types": "tsc --noEmit",
        "watch": "vite build --watch"
    },
    "devDependencies": {
        "@alpinejs/anchor": "^3.14.9",
        "@alpinejs/collapse": "^3.14.9",
        "@alpinejs/focus": "^3.14.9",
        "@alpinejs/intersect": "^3.14.9",
        "@alpinejs/mask": "^3.14.9",
        "@alpinejs/morph": "^3.14.9",
        "@alpinejs/persist": "^3.14.9",
        "@alpinejs/resize": "^3.14.9",
        "@alpinejs/sort": "^3.14.9",
        "@eslint/js": "^9.28.0",
        "@tailwindcss/postcss": "^4.1.10",
        "@tailwindcss/vite": "^4.1.10",
        "@types/alpinejs": "^3.13.11",
        "@types/alpinejs__anchor": "^3.13.1",
        "@types/alpinejs__collapse": "^3.13.4",
        "@types/alpinejs__focus": "^3.13.4",
        "@types/alpinejs__intersect": "^3.13.4",
        "@types/alpinejs__mask": "^3.13.4",
        "@types/alpinejs__morph": "^3.13.4",
        "@types/alpinejs__persist": "^3.13.4",
        "@types/alpinejs__resize": "^3.14.0",
        "@types/alpinejs__sort": "^3.13.0",
        "@types/node": "^24.0.1",
        "@typescript-eslint/type-utils": "^8.34.0",
        "alpinejs": "^3.14.9",
        "autoprefixer": "^10.4.21",
        "axios": "^1.9.0",
        "chokidar": "^4.0.3",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "concurrently": "^9.1.2",
        "cropperjs": "^2.0.0",
        "eslint": "^9.28.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.4.1",
        "globals": "^16.2.0",
        "laravel-echo": "^2.1.5",
        "laravel-vite-plugin": "^1.3.0",
        "lint-staged": "^16.1.0",
        "postcss": "^8.5.5",
        "puppeteer": "^24.10.1",
        "rimraf": "^6.0.1",
        "rollup-plugin-visualizer": "^6.0.3",
        "shiki": "^3.6.0",
        "simple-git-hooks": "^2.13.0",
        "tailwind-merge": "^3.3.1",
        "tailwindcss": "^4.1.10",
        "tailwindcss-animate": "^1.0.7",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.34.0",
        "vite": "^6.3.5",
        "vite-plugin-compression": "^0.5.1",
        "vite-plugin-dynamic-import": "^1.6.0",
        "vite-plugin-eslint": "^1.8.1",
        "vite-plugin-inspector": "^1.0.4",
        "vitest": "^3.2.3"
    },
    "devEngines": {
        "packageManager": {
            "name": "pnpm",
            "onFail": "warn"
        },
        "runtime": {
            "name": "node",
            "onFail": "error"
        }
    },
    "engines": {
        "node": ">=22.0.0",
        "pnpm": ">=10.0.0"
    },
    "optionalDependencies": {
        "@rollup/rollup-linux-x64-gnu": "4.43.0",
        "@tailwindcss/oxide-linux-x64-gnu": "^4.1.10",
        "lightningcss-linux-x64-gnu": "^1.30.1"
    },
    "packageManager": "pnpm@10.12.1"
}
